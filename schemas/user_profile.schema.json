{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bloomtrip.dev/schemas/user_profile.schema.json",
  "title": "UserProfile",
  "type": "object",
  "required": ["id", "locale", "created_at", "updated_at"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "locale": { "type": "string" },
    "home_airport": { "type": "string", "minLength": 3, "maxLength": 3 },
    "interests": { "type": "array", "items": { "type": "string" } },
    "budget_style": { "type": "string" },
    "trip_styles": { "type": "array", "items": { "type": "string" } },
    "constraints": { "type": "object", "additionalProperties": true },
    "personalization_vector": { "type": "array", "items": { "type": "number" } },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
